Class {
	#name : #MicCSSThemeTest,
	#superclass : #TestCase,
	#instVars : [
		'cssTheme'
	],
	#category : #'Microdown-HTMLExporter-Tests-CSS'
}

{ #category : #accessing }
MicCSSThemeTest >> cssTheme [
	" Answer the cssTheme of this MicCSSThemeTest "

	^ cssTheme
]

{ #category : #accessing }
MicCSSThemeTest >> cssTheme: anObject [
	" Sets the cssTheme of this MicCSSThemeTest "

	cssTheme := anObject
]

{ #category : #running }
MicCSSThemeTest >> setUp [

	super setUp.
	cssTheme := MicCSSTheme new
		framework: (MicCSSFramework new name: 'MockFramework'; yourself);
		yourself

]

{ #category : #autogenerated }
MicCSSThemeTest >> testFramework [

	self assert: (cssTheme framework isKindOf: MicCSSFramework).

]
